<Window x:Name="icon" x:Class="PieceWork.MainWindow"
            xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
            xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
            xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
            xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
            xmlns:local="clr-namespace:PieceWork"
            mc:Ignorable="d"
            Title="Incorporeal Incorporated" Height="260" Width="500" WindowStartupLocation="CenterScreen" Icon="/IncIncLogo.png">
    <Grid Margin="0,0,0,1">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100*"/>
            <ColumnDefinition Width="207*"/>
            <ColumnDefinition Width="193*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="36*"/>
            <RowDefinition Height="36*"/>
            <RowDefinition Height="36*"/>
            <RowDefinition Height="36*"/>
            <RowDefinition Height="36*"/>
        </Grid.RowDefinitions>

        <!-- Row 0 Control -->
        <Label Content="Worker _Name: " HorizontalAlignment="Left"  VerticalAlignment="Center" Target="{Binding ElementName= textBoxWorkerName}" Height="26" Margin="11,0,0,0" Width="89"/>
        <TextBox x:Name="textBoxWorkerName" Grid.Column="1"  Text="" VerticalAlignment="Center" Width="200" ToolTip="Enter the worker's name here." Height="18" HorizontalAlignment="Stretch"/>
        <Label Content="" x:Name="labelWorkerNameError" Grid.Column="2" HorizontalAlignment="Left" VerticalAlignment="Center" Grid.Row="0" Foreground="Red"/>
        <!-- Row 1 Control -->
        <Label Content="Messages _Sent: " Grid.Row="1" HorizontalAlignment="Stretch"  VerticalAlignment="Center" Target="{Binding ElementName=textBoxMessagesSent}" Height="26" Width="94"/>
        <TextBox x:Name="textBoxMessagesSent" Grid.Column="1" HorizontalAlignment="Stretch"  Grid.Row="1" Text="" VerticalAlignment="Center" Width="200" ToolTip="Enter the number of messages sent by the worker here." Height="18"/>
        <Label Content="" x:Name="labelMessagesSentError" Grid.Column="2" HorizontalAlignment="Stretch" VerticalAlignment="Center" Grid.Row="1" Foreground="Red"/>

        <!-- Row 2 Control -->
        <Label Content="Total Pay: " Grid.Row="2" HorizontalAlignment="Left"  VerticalAlignment="Center" Height="26" Margin="37,0,0,0" Width="63"/>
        <TextBox x:Name="textBoxSinglePay" Grid.Column="1" HorizontalAlignment="Stretch"  Grid.Row="2" Text="" VerticalAlignment="Center" Width="200" IsReadOnly="True" ToolTip="Displays the total pay owed to the individual worker." Height="18"/>
        

        <!-- Row 3 Control -->
        <Grid Grid.Row="3" ColumnSpan="3" Margin="0,7,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Button x:Name="buttonCalculate" Content=" _Calculate Pay " HorizontalAlignment="Center" VerticalAlignment="Center" Click="CalculateClick" ToolTip="Click to calculate the worker's pay." Width="116" Height="23" Grid.Column="1" IsDefault="True" RenderTransformOrigin="-0.225,0.424"/>
            <Button x:Name="buttonClear" Content="  C_lear Fields  " HorizontalAlignment="Left"  VerticalAlignment="Center" Click="ClearClick" ToolTip="Click to clear all the input data."   Width="100" Height="23" Grid.ColumnSpan="2" Margin="22,0,0,0"/>
        </Grid>
        <Button x:Name="buttonExit" Content="   _Exit   " Grid.Column="2" HorizontalAlignment="Center" Grid.Row="3" VerticalAlignment="Center" Click="ExitClick" Height="23" Width="100" ToolTip="Click to exit application." IsCancel="True"/>

        <Button x:Name="buttonSummary" Content="   Click for _Summary  " HorizontalAlignment="Left" Margin="50,10,0,0" Grid.Row="4" VerticalAlignment="Top" Height="23" Width="200" ToolTip="Click to view the summary." Grid.ColumnSpan="2" Click="SummaryClick" Grid.Column="1"/>




    </Grid>
</Window>
