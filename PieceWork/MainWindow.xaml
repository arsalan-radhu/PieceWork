<Window x:Name="icon" x:Class="PieceWork.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PieceWork"
        mc:Ignorable="d"
        Title="Incorporeal Incorporated" Height="310" Width="445" WindowStartupLocation="CenterScreen" Icon="/IncIncLogo.png">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="3*"/>
        </Grid.RowDefinitions>

        <!-- Row 0 Control -->
        <Label Content="Worker _Name: " HorizontalAlignment="Right"  VerticalAlignment="Center" Target="{Binding ElementName= textBoxWorkerName}"/>
        <TextBox x:Name="textBoxWorkerName" Grid.Column="1" HorizontalAlignment="Left"  Text="" VerticalAlignment="Center" Width="200" ToolTip="Enter the worker's name here."/>

        <!-- Row 1 Control -->
        <Label Content="Messages _Sent: " Grid.Row="1" HorizontalAlignment="Right"  VerticalAlignment="Center" Target="{Binding ElementName=textBoxMessagesSent}"/>
        <TextBox x:Name="textBoxMessagesSent" Grid.Column="1" HorizontalAlignment="Left"  Grid.Row="1" Text="" VerticalAlignment="Center" Width="200" ToolTip="Enter the number of messages sent by the worker here."/>

        <!-- Row 2 Control -->
        <Label Content="Total Pay: " Grid.Row="2" HorizontalAlignment="Right"  VerticalAlignment="Center"/>
        <TextBox x:Name="textBoxSinglePay" Grid.Column="1" HorizontalAlignment="Left"  Grid.Row="2" Text="" VerticalAlignment="Center" Width="200" IsReadOnly="True" ToolTip="Displays the total pay owed to the individual worker."/>

        <!-- Row 3 Control -->
        <Grid Grid.Row="3" ColumnSpan="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Button x:Name="buttonCalculate" Content=" _Calculate Pay " HorizontalAlignment="Center" VerticalAlignment="Center" Click="CalculateClick" ToolTip="Click to calculate the worker's pay." Width="100" Height="23" Grid.Column="1"/>
            <Button x:Name="buttonClear" Content="  C_lear Fields  " HorizontalAlignment="Center"  VerticalAlignment="Center" Click="ClearClick" ToolTip="Click to clear all the input data."   Width="100" Height="23"/>
        </Grid>
        <Button x:Name="buttonExit" Content="   _Exit   " Grid.Column="1" HorizontalAlignment="Left" Margin="100,0,0,0" Grid.Row="3" VerticalAlignment="Center" Click="ExitClick" Height="23" Width="100" />
        <!-- Row 4 Control -->
        <GroupBox Header="Summary Values" Grid.Row="4" Grid.ColumnSpan="2">

            <Grid>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>

                <!-- Row 0 Control -->
                <Label Content="Total Workers:  " HorizontalAlignment="Right"  VerticalAlignment="Center" />
                <TextBox x:Name="textBoxTotalWorkers"  Grid.Column="1" HorizontalAlignment="Left" Margin="5" Text=""  VerticalAlignment="Center" Width="200" IsReadOnly="True" ToolTip="Displays the total number of workers that have been input."/>

                <!-- Row 1 Control -->
                <Label Content="Total Pay:  " Grid.Row="1"  HorizontalAlignment="Right"  VerticalAlignment="Center" />
                <TextBox x:Name="textBoxTotalPay" Grid.Row="1" Grid.Column="1" HorizontalAlignment="Left" Margin="5" Text=""  VerticalAlignment="Center" Width="200" IsReadOnly="True" ToolTip="Displays the total pay owed to all the enteries."/>

                <!-- Row 2 Control -->
                <Label Content="Average Pay:   " HorizontalAlignment="Right"  VerticalAlignment="Center" Grid.Row="2"/>
                <TextBox x:Name="textBoxAveragePay"  Grid.Row="2" Grid.Column="1" HorizontalAlignment="Left" Margin="5" Text=""  VerticalAlignment="Center" Width="200" IsReadOnly="True" ToolTip="Displays the average pay between the total entered workers."/>


            </Grid>

        </GroupBox>


    </Grid>
</Window>
